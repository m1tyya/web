{
	"$schema": "https://json.schemastore.org/tsconfig",
	"compilerOptions": {
		"baseUrl": ".",
		"jsx": "react-jsx",
		"noEmit": true,
		"paths": {
			"~": ["src/index.ts"],
			"~/*": ["src/*"]
		},
		"typeRoots": ["node_modules/@types", "src/index.d.ts", "src/types/html.ts"]
	},
	"exclude": ["build", "dist", "node_modules"],
	"extends": "@m1tyya/tsconfig/base",
	"include": ["src", "src/types/html.ts"]
}
